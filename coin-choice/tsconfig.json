{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2023", "dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "allowImportingTsExtensions": true, // .tsx 拡張子のインポートを許可
    "isolatedModules": true,
    "moduleDetection": "force",
    // "noEmit": true,  //  tsc --noEmit を実行する場合はコメントアウト
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true, // Ensure this is set to true
    "jsx": "react-jsx", // Ensure this is set to "react-jsx"
    "types": ["node"],
    "resolveJsonModule": true
  },
  "include": ["vite.config.ts", "./src/**/*", "src/custom.d.ts"]
}
